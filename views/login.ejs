<body>
<form action="/login" id="loginForm" method="post">
    账号:<input name="account" id="account"><br/>
    密码:<input type="password" name="password" id="password"><br/>
    <input type="button" onclick="isfull();" value="登陆"> <span style="color: red"><%=message%></span> <br/>
</form>
</body>
<script src="/javascripts/jquery-3.3.1.js"></script>
<script>
    function isfull() {
        if($("#account").val()==""){
            alert("请输入账号");
            return;
        }
        if($("#password").val()==""){
            alert("请输入密码");
            return;
        }
        $("#loginForm").submit();
    }
</script>
